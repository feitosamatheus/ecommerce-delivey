        0 10px 24px rgba(0,0,0,.06);
    }

    .product-card {
        background: #fff;
        border-radius: 10px;
        border: 1px solid rgba(0,0,0,.04);

        box-shadow:
            0 2px 6px rgba(0,0,0,.06),
