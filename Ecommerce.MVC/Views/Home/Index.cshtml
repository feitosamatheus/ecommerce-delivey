<script>
     
(function () {

    const spinner = document.getElementById('modalSpinner');

    function showSpinner() {
    spinner?.classList.remove('d-none');
    }

    function hideSpinner() {
    spinner?.classList.add('d-none');
    }

    @* const filtro = document.querySelector('.bc-filter');
    const offsetTop = filtro.offsetTop;
    window.addEventListener('scroll', () => {
        if (window.scrollY > offsetTop - 15) filtro.classList.add('is-sticky');
        else filtro.classList.remove('is-sticky');
    });

    const filtroMb = document.querySelector('.bc-filter-mb');
    const offsetTopMb = filtroMb.offsetTop;
    window.addEventListener('scroll', () => {
        if (window.scrollY > offsetTopMb - 15) filtroMb.classList.add('is-sticky');
        else filtroMb.classList.remove('is-sticky');
    }); *@

    const aplicarSticky = () => {
        // Seleciona todos os elementos que devem ter comportamento sticky
        const seletores = ['.bc-filter', '.bc-filter-mb'];
        const scrollPos = window.scrollY;

        seletores.forEach(seletor => {
            const elemento = document.querySelector(seletor);
            
            // Só processa se o elemento existir e estiver visível na tela (display != none)
            if (elemento && elemento.offsetParent !== null) {
                // Se for a primeira execução, guardamos o offset original para não perder a referência
                if (!elemento.dataset.originalOffset) {
                    elemento.dataset.originalOffset = elemento.offsetTop;
                }

                const offsetReferencia = parseInt(elemento.dataset.originalOffset);

                if (scrollPos > offsetReferencia - 5) {
                    elemento.classList.add('is-sticky');
                } else {
                    elemento.classList.remove('is-sticky');
                }
            } else if (elemento) {
                // Se o elemento estiver oculto (ex: filtro desktop no mobile), removemos o sticky por segurança
                elemento.classList.remove('is-sticky');
            }
        });
    };

    // Um único listener para controlar ambos
    window.addEventListener('scroll', aplicarSticky, { passive: true });

    function setupFilterLogic(suffix = '') {
        // Elementos da Busca
        const btnPesquisar = document.getElementById('btnPesquisar' + suffix);
        const btnFecharBusca = document.getElementById('btnFecharBusca' + suffix);
        const filtroCategoria = document.getElementById('filtroCategoria' + suffix);
        const filtroTexto = document.getElementById('filtroTexto' + suffix);
        const inputBusca = document.getElementById('filtroNome' + suffix);

        let modoBuscaTexto = false;

        // --- Lógica de Troca de Interface (Busca vs Select) ---
        function abrirBuscaTexto() {
            filtroCategoria?.classList.add('d-none');
            filtroTexto?.classList.remove('d-none');
            btnPesquisar?.classList.add('d-none');
            modoBuscaTexto = true;
            setTimeout(() => inputBusca?.focus(), 50); // Timeout para garantir foco no mobile
        }

        function fecharBuscaTexto() {
            filtroTexto?.classList.add('d-none');
            filtroCategoria?.classList.remove('d-none');
            btnPesquisar?.classList.remove('d-none');
            modoBuscaTexto = false;

            if (inputBusca) {
                inputBusca.value = '';
                inputBusca.dispatchEvent(new Event('input', { bubbles: true }));
            }
        }

        btnPesquisar?.addEventListener('click', () => {
            if (!modoBuscaTexto) abrirBuscaTexto();
            else inputBusca?.focus();
        });

        btnFecharBusca?.addEventListener('click', fecharBuscaTexto);

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && modoBuscaTexto) fecharBuscaTexto();
        });

        // --- Lógica do Select Customizado ---
        const selectWrap = document.getElementById('filtroCategoria' + suffix);
        if (selectWrap) {
            const trigger = selectWrap.querySelector('.bc-select__trigger');
            const optionsList = Array.from(selectWrap.querySelectorAll('.bc-select__options li'));
            const valueSpan = selectWrap.querySelector('.bc-select__value');
            const nativeSelect = selectWrap.querySelector('select');

            // Abre/Fecha Select
            trigger?.addEventListener('click', (e) => {
                e.stopPropagation();
                const isOpen = selectWrap.classList.contains('is-open');
                // Fecha outros selects antes de abrir este
                document.querySelectorAll('.bc-select').forEach(s => s.classList.remove('is-open'));
                if (!isOpen) selectWrap.classList.add('is-open');
            });

            // Seleção de Opção
            optionsList.forEach(option => {
                option.addEventListener('click', (e) => {
                    e.stopPropagation();
                    
                    optionsList.forEach(o => o.classList.remove('is-selected'));
                    option.classList.add('is-selected');

                    if (valueSpan) valueSpan.textContent = option.textContent;

                    if (nativeSelect) {
                        nativeSelect.value = option.dataset.value || '';
                        nativeSelect.dispatchEvent(new Event('change', { bubbles: true }));
                    }

                    selectWrap.classList.remove('is-open');
                });
            });
        }

        // --- Listeners de Eventos (Integração) ---
        const selectNative = selectWrap?.querySelector('select');
        selectNative?.addEventListener('change', () => {
            console.log(`Filtro ${suffix || 'Desktop'} Categoria:`, selectNative.value);
        });

        inputBusca?.addEventListener('input', () => {
            console.log(`Filtro ${suffix || 'Desktop'} Texto:`, inputBusca.value);
        });
    }

    // 2. Inicialização Global
    document.addEventListener('DOMContentLoaded', () => {
        // Inicializa Desktop
        setupFilterLogic(''); 
        
        // Inicializa Mobile
        setupFilterLogic('Mobile');

        // Clique fora fecha qualquer select aberto
        document.addEventListener('click', () => {
            document.querySelectorAll('.bc-select').forEach(s => s.classList.remove('is-open'));
        });
    });

    const host = document.getElementById('modalHost');

    async function abrirModalProduto(produtoId) {
        if (!host) return;

        // Remove modal anterior
        const old = document.getElementById('modalAddProduto');
        if (old) old.remove();

        try {
            showSpinner();

            const resp = await fetch(`/Produto/BuscarModalAdicionarProduto?id=${encodeURIComponent(produtoId)}`, {
            method: 'GET',
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });

            if (!resp.ok) {
            throw new Error(`Erro HTTP ${resp.status}`);
            }

            const html = await resp.text();
            host.insertAdjacentHTML('beforeend', html);

            const modalEl = document.getElementById('modalAddProduto');
            if (!modalEl) return;

            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);

            modalEl.addEventListener('hidden.bs.modal', () => {
            modalEl.remove();
            }, { once: true });

            modal.show();

        } catch (err) {
            console.error('Erro ao carregar modal:', err);
            alert('Não foi possível carregar o produto. Tente novamente.');
        } finally {
            hideSpinner();
        }
    }

    document.addEventListener('click', (e) => {
        const btn = e.target.closest('.bc-product__add');
        if (!btn) return;

        e.preventDefault();
        e.stopPropagation();

        const produtoId = btn.dataset.produtoId;
        if (!produtoId) return;

        abrirModalProduto(produtoId);
    });
})();
</script>




