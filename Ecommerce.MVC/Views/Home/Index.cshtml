<style>

    .container-filtro {
        background-color: #F5EBDD;
        border-radius: 5px;
    }

    .btn-filtro {
        width: clamp(28px, 6vw, 36px);
        height: clamp(28px, 6vw, 36px);
        border-radius: 50%;
        background-color: #663E1A;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color .2s ease, box-shadow .2s ease, transform .1s ease;
    }

    .btn-filtro i {
        font-size: clamp(0.7rem, 1.8vw, 0.9rem);
        color: #ffffff;
    }

    .btn-filtro:hover {
        background-color: #663d1ad5;
        box-shadow: 0 4px 10px rgba(46, 16, 2, 0.35);
        transform: translateY(-1px);
    }

    .btn-filtro:focus,
    .btn-filtro:active {
        background-color: #663d1ad5;
        box-shadow: 0 0 0 3px rgba(102, 62, 26, 0.35);
        outline: none;
    }

    .custom-select {
        position: relative;
        width: 100%;
        font-size: 14px;
    }

    .custom-select-trigger {
        width: 100%;
        height: 44px;
        padding: 0 16px 0 14px;
        background: #ffffff;
        border: 2px solid rgb(207, 207, 207);
        border-radius: 5px;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: space-between;
        cursor: pointer;
        transition: border-color .2s ease, box-shadow .2s ease;
    }

    .custom-select-trigger:hover,
    .custom-select.open .custom-select-trigger {
        border-color: #663E1A;
    }

    .custom-select-value {
        color: #1f1f1f;
    }

    .custom-select-arrow {
        width: 7px;
        height: 7px;
        border-right: 2px solid #663E1A;
        border-bottom: 2px solid #663E1A;
        transform: rotate(45deg);
        transition: transform .2s ease;
        flex: 0 0 auto;
        margin-left: 10px;
    }

    .custom-select.open .custom-select-arrow {
        transform: rotate(-135deg);
    }

    .custom-select-options {
        position: absolute;
        top: calc(100% + 6px);
        left: 0;
        width: 100%;
        background: #ffffff;
        border-radius: 6px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        list-style: none;
        padding: 6px 0;
        margin: 0;
        display: none;
        z-index: 10;
    }

    .custom-select.open .custom-select-options {
        display: block;
    }

    .custom-select-options li {
        padding: 10px 14px;
        cursor: pointer;
        transition: background-color .15s ease;
    }

    .custom-select-options li:hover {
        background-color: #F5EBDD;
    }

    .custom-select-options li.selected {
        background-color: #663E1A;
        color: #ffffff;
    }

    #filtroTexto {
        width: 100%;
        color: #1f1f1f !important;

    }

    #filtroTexto input {
        height: 44px;
        border: 2px solid rgb(207, 207, 207);
        padding: 0 16px 0 14px;
        border-radius: 5px;
        font-weight: 500;
        color: #1f1f1f !important;
        font-size: 14px;
    }

    /* Botão X dentro do input */
    .btn-fechar-input {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        width: 28px;
        height: 28px;
        border-radius: 50%;
        border: none;
        background: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #663E1A;
        cursor: pointer;
        transition: background-color .15s ease;
    }

    .btn-fechar-input:hover {
        background-color: rgba(102, 62, 26, 0.10);
    }

    #filtroNome:focus,
    #filtroNome:active {
        box-shadow: 0 0 0 2px #663E1A !important;
        outline: none  !important;
    }

    .icone-filtro {
        position: absolute;
        top: 50%;
        left: 12px;
        transform: translateY(-50%);
        color: #663E1A;
        pointer-events: none;
    }

    .box.panel{
        background: #fff;
        border-radius: 5px;
