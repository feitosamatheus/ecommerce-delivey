                Todos <span class="badge bg-light text-dark ms-1">2</span>
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="pill" data-bs-target="#tab-finalizados" style="border-radius: 20px;">
                Finalizados <span class="badge bg-light text-dark ms-1">1</span>
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab-todos">
            
            <div class="d-none d-md-grid grid-template-columns mb-2 px-4 text-muted fw-bold" 
                 style="grid-template-columns: 1fr 1.5fr 1fr 1fr auto; font-size: 0.75rem; text-transform: uppercase;">
                <span>Pedido</span>
                <span>Data</span>
                <span>Status</span>
                <span>Total</span>
                <span></span>
            </div>

            <div class="order-list">
                
                <div class="order-card">
                    <div class="d-flex flex-column">
                        <span class="text-muted small d-md-none">Pedido</span>
                        <span class="fw-bold txt-pedido text-dark">#1234</span>
                    </div>
                    
                    <div class="d-flex flex-column">
                        <span class="text-muted small d-md-none">Data</span>
                        <span class="text-secondary txt-data">12/10/2025</span>
                    </div>

                    <div>
                        <span class="badge-status status-finalizado">Finalizado</span>
                    </div>

                    <div class="text-md-start">
                        <span class="fw-bolder txt-total text-dark">R$ 150,00</span>
                    </div>
                </div>

                <div class="order-card">
