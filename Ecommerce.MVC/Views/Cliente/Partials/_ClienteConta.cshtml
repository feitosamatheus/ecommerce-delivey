<style>
    /* Tipografia Fluida com Clamp */
    /* clamp(tamanho-min, preferência-fluida, tamanho-max) */
    .txt-pedido { font-size: clamp(0.85rem, 2vw, 1rem); }
    .txt-data { font-size: clamp(0.75rem, 1.5vw, 0.875rem); }
    .txt-total { font-size: clamp(0.9rem, 2.5vw, 1.1rem); }

    /* Container de Cards (Substitui a Table) */
    .order-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .order-card {
        background: #fff;
        border-radius: 16px;
        padding: 16px;
        transition: all 0.2s ease;
        border: 1px solid #f0f0f0;
        display: grid;
        /* Layout adaptável: 1 coluna no mobile, 4 colunas no desktop */
        grid-template-columns: 1fr auto;
        align-items: center;
        gap: 8px;
    }

    @@media (min-width: 768px) {
        .order-card {
            grid-template-columns: 1fr 1.5fr 1fr 1fr auto;
            padding: 12px 24px;
        }
    }

    .order-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.06);
        border-color: #3c1e0a33;
    }

    /* Status Customizado */
    .badge-status {
        padding: 5px 12px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.75rem;
        text-transform: uppercase;
        display: inline-block;
        width: fit-content;
    }

    .status-finalizado { background: #e7f5ea; color: #1f7a33; }
    .status-pendente { background: #fff4e5; color: #b07100; }

    /* Estilo das Nav-Pills (Mobile Friendly) */
    .nav-pills {
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        padding-bottom: 8px;
        -webkit-overflow-scrolling: touch;
    }

    .nav-pills .nav-link {
        white-space: nowrap;
        border-radius: 12px;
        color: #666;
        font-weight: 600;
    }

    .nav-pills .nav-link.active {
        background-color: #3c1e0a !important;
    }
</style>
