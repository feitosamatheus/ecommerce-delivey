                <button type="button"
                        class="btn bc-btn bc-btn--ghost d-none d-md-flex"
                        data-bs-toggle="modal"
                        data-bs-target="#modalVerMais"
                        aria-controls="sidebarMenu"
                        title="Acompanhar pedido"
                        aria-label="Abrir menu">
                    <i class="fa-solid fa-location-dot"></i> Acompanhar pedido
                </button>

                <button type="button"
                        class="btn bc-btn bc-btn--ghost d-none d-md-flex"
                        id="btn-buscar-modal-cliente"
                        title="Minha conta"
                        aria-label="Abrir menu">
                    <i class="fa-solid fa-user"></i> Minha conta
                </button>

                <button type="button"
                        class="btn bc-btn bc-btn--ghost d-none d-md-flex"
                        data-bs-toggle="modal"
                        data-bs-target="#modalVerMais"
                        aria-controls="sidebarMenu"
                        title="Informações"
                        aria-label="Abrir menu">
                    Ver mais
                </button>
            </div>
        </div>
    </header>
</section>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
  (function () {
    const $btn = $('#btn-buscar-modal-cliente');

    let carregado = false;

    $btn.on('click', function () {
        const $body = $('#modalContaClienteBody');
        const modalEl = document.getElementById('modalContaCliente');
        const modal = bootstrap.Modal.getOrCreateInstance(modalEl);

        $body.html('<div class="text-muted">Carregando...</div>');

        $.get('/Cliente/ContaModal')
            .done(function (html) {
            $body.html(html);
            carregado = true;
            modal.show();
            })
            .fail(function () {
            $body.html('<div class="text-danger">Não foi possível carregar seus dados agora.</div>');
            modal.show();
            });
    });

  })();
</script>