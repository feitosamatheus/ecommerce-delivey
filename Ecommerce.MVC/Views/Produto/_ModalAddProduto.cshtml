@using System.Globalization
@using Ecommerce.MVC.Entities
@model Produto

@{
    var pt = new CultureInfo("pt-BR");
    var precoBase = Model.Preco;

    // Ajuste conforme seu Model:
    int? tempoMin = Model.TempoPreparoMinutos; // ex.: 20
    var tempoTexto = tempoMin.HasValue ? $"{tempoMin.Value}–{tempoMin.Value + 10} min" : null; // faixa opcional
    // se já tiver texto pronto:
    // var tempoTexto = Model.TempoPreparoTexto;
}

<style>
    /* Realce visual do item selecionado */
    #modalAddProduto .acomp-item.is-selected {
        background: rgba(60, 30, 10, 0.06);
        border-left: 4px solid rgba(60, 30, 10, 0.65);
    }

    /* Melhor feedback no checkbox/radio */
    #modalAddProduto .acomp-input {
        transform: scale(1.05);
    }

    /* Suaviza cards */
    #modalAddProduto .card.shadow-sm {
        box-shadow: 0 .35rem 1rem rgba(0,0,0,.08) !important;
    }

    @@media (min-width: 768px) {
        #modalAddProduto .details-scroll {
            height: 100%;
            /* overflow-y: auto; */
            -webkit-overflow-scrolling: touch;
        }
        /* opcional: evitar "pular" layout por scrollbar */
        #modalAddProduto .details-scroll {
            scrollbar-gutter: stable;
        }
    }

    /* Mobile: como vira col-12, melhor deixar o body rolar (mais natural) */
    @@media (max-width: 767.98px) {
        #modalAddProduto .modal-body {
            /* overflow-y: auto !important; */
        }

        #modalAddProduto .details-scroll {
            overflow: visible !important;
            height: auto !important;
        }
    }

</style>


<div class="modal fade bc-modal--animated" id="modalAddProduto" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg  p-2">
        <div class="modal-content border-0" style="border-radius: 20px;">

            <div class="position-absolute top-0 end-0 p-3" style="z-index: 10;">
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Fechar"
                        style="width: 32px; height: 32px; font-size: 1.6rem; position: relative; background: white; align-items: center; border-radius: 50%; border: none; display: flex; justify-content: center; top: -3px; right: -3px;">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body p-0" style="overflow: hidden; border-radius: 20px;">
                <div class="row g-0">
                    <!-- HERO (imagem + overlay mobile) -->
                    <div class="col-12 position-relative">
                        <img src="@Model.ImagemUrl"
                             alt="@Model.Nome"
                             class="img-fluid w-100"
                             style="height: 320px; object-fit: cover;">

                        <div class="d-md-none position-absolute bottom-0 start-0 end-0 p-3"
                             style="background: linear-gradient(0deg, rgba(0, 0, 0, 1.65), rgba(0, 0, 0, 0));">
                            <div class="fw-bold text-white" style="font-size: 2.05rem; line-height: 1.2;">
                                @Model.Nome
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Model.Descricao))
                            {
                                <div class="text-white-50 mt-1" style="line-height: 1.2;">
                                    @Model.Descricao
                                </div>
                            }
                        </div>
                    </div>

                    <!-- DETALHES -->
                    <div class="col-12 p-4 details-scroll">
                        <!-- Título/descrição no desktop -->
                        <div class="d-none d-md-block">
                            <h4 class="fw-bold mb-1" style="color:#3c1e0a;">@Model.Nome</h4>
                            @if (!string.IsNullOrWhiteSpace(Model.Descricao))
                            {
                                <p class="text-muted small mb-3">@Model.Descricao</p>
                            }
                            else
                            {
                                <div class="mb-3"></div>
                            }
                        </div>

                        <!-- Preço base em destaque -->
                        <div class="d-flex align-items-end justify-content-between mb-3">
                            <div>
                                <div class="text-muted small">Preço base</div>
                                <div class="fw-bold" style="color:#3c1e0a; font-size: 1.35rem;">
                                    @precoBase.ToString("C", pt)
                                </div>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(tempoTexto))
                            {
                                <span class="badge rounded-pill"
                                      style="background:#f7f7f7; color:#3c1e0a; border: 1px solid rgba(60,30,10,.15);">
                                    <i class="fa-regular fa-clock me-1"></i> @tempoTexto
                                </span>
                            }
                        </div>

                        <!-- hidden base -->
                        <input type="hidden" id="modalProdutoId" value="@Model.Id" />
                        <input type="hidden" id="modalPrecoBase" value="@precoBase.ToString(CultureInfo.InvariantCulture)" />

                        <!-- CATEGORIAS -->
                        @if (Model.AcompanhamentoCategorias?.Any() == true)
                        {
                            <div class="mt-2">
                                @foreach (var pc in Model.AcompanhamentoCategorias
                                                            .OrderBy(x => x.Categoria.Ordem)
                                                            .ThenBy(x => x.Categoria.Nome))
                                {
                                    var cat = pc.Categoria;

                                    var tipoSelecao = (cat.MaxSelecionados <= 1) ? "radio" : "checkbox";
                                    var requiredLabel = cat.Obrigatorio ? "Obrigatório" : "Opcional";
                                    var inputName = $"acomp_{cat.Id:N}";

                                    var itens = (cat.Acompanhamentos ?? new List<Acompanhamento>())
                                    .Where(a => a.Ativo)
                                    .OrderBy(a => a.Ordem)
                                    .ThenBy(a => a.Nome)
                                    .ToList();

                                    <div class="card border-0 shadow-sm mb-3" style="border-radius: 14px; overflow: hidden;">
                                        <div class="card-body" style="background:#f7f7f7;">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="pe-3">
                                                    <div class="fw-bold" style="color:#3c1e0a;">@cat.Nome</div>

                                                    @* <div class="text-muted small">
                                                        @requiredLabel
                                                        @if (cat.MinSelecionados > 0)
                                                        {
                                                            <span> • Mín. @cat.MinSelecionados</span>
                                                        }
                                                        @if (cat.MaxSelecionados > 0)
                                                        {
                                                            <span> • Máx. @cat.MaxSelecionados</span>
                                                        }
                                                    </div> *@

                                                    @if (!string.IsNullOrWhiteSpace(cat.Descricao))
                                                    {
                                                        <div class="text-muted small">@cat.Descricao</div>
                                                    }
                                                </div>

                                                <span class="badge rounded-pill"
                                                      style="background:#3c1e0a; color:#fff;">
                                                    @requiredLabel
                                                </span>
                                            </div>
                                        </div>

                                        <div class="list-group list-group-flush"
                                             data-acomp-categoria
                                             data-categoria-id="@cat.Id"
                                             data-min="@cat.MinSelecionados"
                                             data-max="@cat.MaxSelecionados"
                                             data-obrigatorio="@(cat.Obrigatorio ? "1" : "0")" style="overflow-y: scroll; max-height: 400px;">

                                            @if (itens.Any())
                                            {
                                                @foreach (var item in itens)
                                                {
                                                    var inputId = $"acomp_{cat.Id:N}_{item.Id:N}";
                                                    var temAdicional = item.Preco > 0;

                                                    <label class="list-group-item d-flex justify-content-between align-items-center py-3 acomp-item"
                                                           for="@inputId"
                                                           style="cursor:pointer;">
                                                        <div class="d-flex flex-column">
                                                            <span class="fw-semibold">@item.Nome</span>
                                                            @if (!string.IsNullOrWhiteSpace(item.Descricao))
                                                            {
                                                                <span class="text-muted small">@item.Descricao</span>
                                                            }
                                                        </div>

                                                        <div class="d-flex align-items-center gap-3">
                                                            <div class="fw-bold @(temAdicional ? "text-success" : "text-muted")">
                                                                @(temAdicional ? $"+ {item.Preco.ToString("C", pt)}" : "Incluso")
                                                            </div>

                                                            <input id="@inputId"
                                                                   type="@tipoSelecao"
                                                                   name="@inputName"
                                                                   class="form-check-input acomp-input"
                                                                   value="@item.Id"
                                                                   data-preco="@item.Preco.ToString(CultureInfo.InvariantCulture)"
                                                                   data-categoria-id="@cat.Id"
                                                                   aria-label="Selecionar @item.Nome" />
                                                        </div>
                                                    </label>
                                                }

                                                @* @for (var repeat = 0; repeat < 5; repeat++)
                                                {
                                                    foreach (var item in itens)
                                                    {
                                                        var inputId = $"acomp_{cat.Id:N}_{item.Id:N}_{repeat}";
                                                        var temAdicional = item.Preco > 0;

                                                        <label class="list-group-item d-flex justify-content-between align-items-center py-3 acomp-item"
                                                               for="@inputId"
                                                               style="cursor:pointer;">
                                                            <div class="d-flex flex-column">
                                                                <span class="fw-semibold">@item.Nome</span>

                                                                @if (!string.IsNullOrWhiteSpace(item.Descricao))
                                                                {
                                                                    <span class="text-muted small">@item.Descricao</span>
                                                                }
                                                            </div>

                                                            <div class="d-flex align-items-center gap-3">
                                                                <div class="fw-bold @(temAdicional ? "text-success" : "text-muted")">
                                                                    @(temAdicional
                                                                                                ? $"+ {item.Preco.ToString("C", pt)}"
                                                                                                : "Incluso")
                                                                </div>

                                                                <input id="@inputId"
                                                                       type="@tipoSelecao"
                                                                       name="@inputName"
                                                                       class="form-check-input acomp-input"
                                                                       value="@item.Id"
                                                                       data-preco="@item.Preco.ToString(CultureInfo.InvariantCulture)"
                                                                       data-categoria-id="@cat.Id"
                                                                       aria-label="Selecionar @item.Nome" />
                                                            </div>
                                                        </label>
                                                    }
                                                } *@

                                            }
                                            else
                                            {
                                                <div class="p-3 text-muted small">
                                                    Nenhum item disponível nesta categoria.
                                                </div>
                                            }
                                        </div>

                                        <div class="text-danger small px-3 pb-3 d-none" data-acomp-erro="@cat.Id">
                                            Selecione no mínimo @cat.MinSelecionados item(ns).
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        <!-- Observação -->
                        <div class="bg-light p-3 rounded-3 mb-3">
                            <label class="fw-bold mb-2 d-block" style="color: #3c1e0a; font-size: 0.9rem;">
                                Alguma observação?
                            </label>
                            <textarea id="modalProdutoObs" class="form-control border-0 bg-white" rows="2"
                                      placeholder="Ex: tirar cebola, maionese à parte..."
                                      style="resize: none; font-size: 0.85rem;"></textarea>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal-footer border-top p-3 bg-white" style="border-radius: 0px 0px 20px 20px;">
                <div class="container-fluid p-0">
                    <div class="row align-items-center">
                        <div class="col-5 col-md-4">
                            <div class="d-flex align-items-center justify-content-between border rounded-pill px-2 py-1">
                                <button type="button"
                                        class="btn btn-link p-0 text-decoration-none btn-qtd"
                                        data-delta="-1"
                                        style="color: #d4a017; font-weight: bold; font-size: 1.2rem;">
                                    &minus;
                                </button>

                                <input id="modalProdutoQtd" type="number" value="1" min="1"
                                       class="form-control border-0 text-center p-0 fw-bold"
                                       style="width: 30px; background: transparent;" readonly>

                                <button type="button"
                                        class="btn btn-link p-0 text-decoration-none btn-qtd"
                                        data-delta="1"
                                        style="color: #d4a017; font-weight: bold; font-size: 1.2rem;">
                                    &plus;
                                </button>
                            </div>
                        </div>

                        <div class="col-7 col-md-8">
                            <button type="button" id="btnConfirmarInclusaoProduto"
                                    class="btn w-100 fw-bold text-white d-flex justify-content-between align-items-center px-3 py-1"
                                    style="background-color:#3c1e0a; border-radius: 30px;">
                                <span>Adicionar</span>

                                <span class="badge bg-white text-dark fw-bold"
                                      style="border-radius: 999px; padding: .75rem .75rem; top:0px;">
                                    <span id="totalModal" style="font-size: 0.9rem;">@precoBase.ToString("C", pt)</span>
                                </span>
                            </button>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
